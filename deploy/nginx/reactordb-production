server {
    listen 80;

    server_name .domain.org;  # dot before the domain ensure it will respond to subdomains and the domain itself e.g. www.domain.org and domain.org
    # set_real_ip_from 255.255.255.255;  # set this to the IP address of the reverse proxy/gateway server if we are behind one. Leave unset if direct on internet.

    location / {
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header Host $http_host;
            proxy_redirect off;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_pass http://localhost:5050/;  # this should match the port in the gunicorn config
    }
}
